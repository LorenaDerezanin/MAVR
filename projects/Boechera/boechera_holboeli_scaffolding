for SP in SRR090306 SRR090307 SRR090308 SRR090309 SRR090310;
do
samtools view -L /mnt/peru/skliver/Boechera/Boechera_holboellii/genome/assemblies/discovar_adapter_filtered_cookie_trimmomatic/a.final/a.lines.20kb+.bed ${SP}.rf.X10k.sam > ${SP}.rf.X10k.contigs20Kb+.sam; awk -F'\t' '{ if ($9 > 0) print $9}' ${SP}.rf.X10k.contigs20Kb+.sam > ${SP}.rf.X10k.contigs20Kb+.len; ~/Soft/MAVR/scripts/draw/draw_histogram.py -i ${SP}.rf.X10k.contigs20Kb+.len -o ${SP}.rf.X10k.contigs20Kb+.len.hist -w 20 -t "Insert size distribution" -l "Insert size" -y "N of fragments" -x 15000;   done